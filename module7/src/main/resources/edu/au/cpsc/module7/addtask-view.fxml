<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="edu.au.cpsc.module7.AddTaskController">
    <TextField fx:id="taskNameField" promptText="Enter Task Name"/>
    <DatePicker fx:id="dueDatePicker"/>
    <ComboBox fx:id="priorityBox" promptText="Select Priority"/>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="saveButton" text="Save" onAction="#saveTask"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#closeWindow"/>
    </HBox>
</VBox>
