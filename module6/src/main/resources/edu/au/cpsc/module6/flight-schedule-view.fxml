<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.au.cpsc.module6.FlightScheduleController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Close" onAction="#closeMenuAction" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem fx:id="updateMenuItem" text="Update" onAction="#updateMenuAction" />
                        <MenuItem text="New" onAction="#newMenuAction" />
                        <MenuItem text="Delete" onAction="#deleteMenuAction" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <fx:include fx:id="flightTableView" source="flight-table-view.fxml" />
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
                <fx:include fx:id="flightDetailView" source="flight-detail-view.fxml" />
                <VBox spacing="5">
                    <children>
                        <Button fx:id="updateButton" text="Update" onAction="#updateButtonAction" maxWidth="Infinity" />
                        <Button text="New" onAction="#newButtonAction" maxWidth="Infinity" />
                        <Button text="Delete" onAction="#deleteButtonAction" maxWidth="Infinity" />
                    </children>
                    <HBox.margin>
                        <Insets left="10"/>
                    </HBox.margin>
                </VBox>
            </children>
        </HBox>
    </bottom>
</BorderPane>